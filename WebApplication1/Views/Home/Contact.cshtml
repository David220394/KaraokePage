<script type="text/javascript">
    var sample = {};
    sample.postData = function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("Test")",
            dataType: "json",
            data: {},
            success: function (data) {
                var table = $("#period1");
                $("#period1 tr").remove();
                $.each(data.Peroid1, function (idx, elem) {
                    //"<li><div class=\"inner\"><div class=\"li-img\"><img src=\"../../Images/karaoke-icon.png\"/></div>"+
