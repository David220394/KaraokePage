                    table.append("<tr>" +
                        "<td  id=\"period1-1-" + idx + "\">" + (idx + 1) + " " + elem.name + "</td>" +
                        "<td>" +
                        "<div id=\"period1-2-" + idx + "\">" + elem.song + "</div></td>" +
                        "</tr > ");
                    var out1 = document.getElementById("period1-1-" + idx);
                    new ShuffleText(out1).start();
                    var out2 = document.getElementById("period1-2-" + idx);
